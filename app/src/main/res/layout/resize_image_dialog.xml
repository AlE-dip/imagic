<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/ed_width"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="15dp"
        android:inputType="number"
        android:textSize="15dp"
        android:maxLength="6"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/ed_height"
        android:layout_width="70dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/width"
        app:layout_constraintLeft_toLeftOf="@+id/ed_width"
        app:layout_constraintRight_toRightOf="@+id/ed_width"
        app:layout_constraintTop_toBottomOf="@+id/ed_width"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/ed_height"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/ed_width"
        android:layout_margin="15dp"
        android:textSize="15dp"
        android:maxLength="6"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="70dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:text="@string/height"
        app:layout_constraintLeft_toLeftOf="@+id/ed_height"
        app:layout_constraintRight_toRightOf="@+id/ed_height"
        app:layout_constraintTop_toBottomOf="@+id/ed_height"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>